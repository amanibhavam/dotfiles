#!/usr/bin/env bash

function main {
  mkdir -p ~/.terraform.d/plugin-cache

  local exts="vscodevim.vim tamasfe.even-better-toml jnoortheen.nix-ide svelte.svelte-vscode hashicorp.terraform golang.go esbenp.prettier-vscode bazelbuild.vscode-bazel cuelang.cue pbkit.vscode-pbkit betterthantomorrow.joyride betterthantomorrow.calva"

  (
    code --list-extensions
    for a in 1 2; do for b in $exts; do echo "$b"; done; done
  ) | tr A-Z a-z | sort | uniq -c | grep ' 2 ' | while read -r count extension; do
    case "$(uname -s)-${extension}" in
      Darwin-cuelang.cue)
        true
        ;;
      *)
        if $(which code code-server | head -1) --install-extension "${extension}"; then
          true
        fi
        ;;
    esac
  done
}

main "$@"
